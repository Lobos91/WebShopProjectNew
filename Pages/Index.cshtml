<img src="~/img/thumbinal.jpg" class="img-fluid" alt="Responsive image" style="padding: 0 0 0 0">


<h1 class="text-center">Welcome in shop</h1>
<br />

<div class="row justify-content-around" >


    @foreach (var item in Model.GetFeatured)
    {
        <div class="card" style="width:20em; margin:10px;">
            <a asp-page="">
                <img src="~/img/@item.ImgUrl" class="card-img-top" style="width:20rem; height:30rem;">
            </a>

            <div class="card-body">
                <h3 class="card-title">@item.Name</h3>
                <h5 class="card-title">Unit: @item.ProductType</h5>
                @foreach (var category in item.ProductCategory)
                {
                    <h5 class="card-title">Type: @category</h5>
                }
                <h5 class="card-text"> Price: @item.Price&euro; (SEK: @(item.Price * 9.5))</h5>
                <p class="card-text">In Stock: @item.Quanity</p>
            </div>
            <div class="card-footer">

                <!-- <a class="btn btn-info" asp-page="">Details</a>-->
                <p>
                    <button class="btn btn-info" type="button" data-toggle="collapse" data-target="#@item.Name.Replace(" ", "")" aria-expanded="false" aria-controls="collapseExample">
                        Details
                    </button>
                </p>
                <div class="collapse" id="@item.Name.Replace(" ", "")">
                    <div class="card card-body" style="width: 18rem;">
                        <p class="card-text">@item.Details</p>
                    </div>
                </div>
                <form method="post">
                    <!--<a class="btn btn-success" asp-page="">Add to Cart</a> -->
                    <button class="btn btn-success" type="submit" asp-route-id="@item.ProductID">Add to Cart</button>
                </form>

            </div>
            <div class="card"></div>
        </div>
    }
</div>











