@page 
@model WebbshoppenSS.Pages.Admin.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h5>You are editing Product of ID: @Model.ProdID</h5>
<hr />

   
<form method="post">
    <div class="row">
        <div class="col-md-6">
            <input asp-for="@Model.ProdID" hidden />
            <div class="form-check">
                <label for="validationDefault01" class="form-label">New product name </label>
                <input type="text" asp-for="@Model.ProductName" class="form-control" id="validationDefault01" value="@Model.SelectedProduct.Name" required>
            </div>
            <br />
            <div class="mb-3">
                <label class="form-label"> Category of the product</label>
                <br />
                <select asp-for="@Model.Category" class="form-select" required aria-label="Select category of product">

                    <option value="">Open this select menu</option>
                    <option value="ProductLight">Ancient units</option>
                    <option value="ProductMedium">Modern units</option>
                    <option value="ProductHeavy">Future units</option>
                </select>
                <div class="invalid-feedback">You have to choose category of the product.</div>
            </div>

            <br />
            <div class="mb-3">
                <label> Type of unit</label>
                <br />
                <select asp-for="@Model.UnitCategory" class="form-select" required aria-label="Select category of selected product category">

                    <option value="">Open this select menu</option>
                    <option value="1">Vehicle</option>
                    <option value="0">Infantry</option>

                </select>
                <div class="invalid-feedback">You have to choose category of the product.</div>
            </div>

            <div class="form-check mb-3">
                <label for="validationDefault01" class="form-label">Desired stock amount</label>
                <input asp-for="@Model.ProductQuanity" type="number" class="form-control" id="validationDefault01" value="@Model.SelectedProduct.Quanity" required>
            </div>

            <div class="form-check mb-3">
                <label for="validationDefault01" class="form-label">Price</label>
                <input asp-for="@Model.ProductPrice" type="number" class="form-control" id="validationDefault01" value="@Model.SelectedProduct.Price" required>
            </div>


            <div class="form-check mb-3">
                <label for="validationTextarea" class="form-label">Detail Area</label>
                <textarea asp-for="@Model.ProductDetails" class="form-control" id="validationTextarea" placeholder="Product details" required></textarea>
                <div class="invalid-feedback">
                    Please enter product details in the Detail Area.
                </div>
            </div>

            <div class="mb-auto">
                <label for="validationTextarea" class="form-label">Picture name with extension t.ex (Picture.jpg)</label>
                <input asp-for="@Model.ProductImage" type="text" value="@Model.SelectedProduct.ImgUrl" class="form-control" aria-label="file example" required>
                <div class="invalid-feedback">Example invalid form file feedback</div>
            </div>
            <br />

            <div class="mb-3">
                <label>Choose if you want to feature this product on start page</label>
                <select asp-for="@Model.Featured" class="form-select" required aria-label="">
                    <option value="">Open this select menu</option>
                    <option value="true">Featured</option>
                    <option value="false">Not featured</option>

                </select>
                <div class="invalid-feedback">You have to choose category of the product.</div>
            </div>
            <br />

            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Submit form</button>
            </div>
        </div>
    </div>
</form>
    


<div>
    <a asp-page="/Admin/Manager">Back to Manager</a>
</div>