@page
@model WebbshoppenSS.Pages.PastModel
@{
}

<table class="table">
	<thead>
		<tr>
			<th scope="col">ID</th>
			<th scope="col">Name</th>
			<th scope="col">Price</th>
			<th scope="col">Type</th>
			<th scope="col">Stock</th>
			<th scoope="col">Category</th>



		</tr>

	</thead>
	@foreach (var item in Model.ProductsLight)

	{
		<tbody>
            <tr>
                <th scope="row">@item.ProductID <img src="~/img/@item.ImgUrl" width="40" height="40" />  </th>
                <td>@item.Name</td>
                <td>EUR: @item.Price / SEK: @(item.PriceSek = item.Price * 9.5 )</td>
                <td>@item.ProductType</td>
                <td>@item.Quanity</td>
                @foreach (var category in item.ProductCategory)
                {
                    <td> @category</td>
                }
                <td>
                    <form method="post" action="/Cart">
                        <div class="mb-3">
@*                            <button class="btn btn-primary" type="submit">Buy</button>*@
							 <a asp-page="/Past" asp-route-add="1" class="btn btn-success">Lägg till</a> 
							 @item.Quanity - 1
							 	 <h1>@Model.MyCounter</h1>
                        </div>
                    </form>
                </td>
            </tr>
			<tr>
				<td>
					<p>

						<button class="btn btn-secondary btn-sm" type="button" data-toggle="collapse" data-target="#@item.Name.Replace( " ", "")" aria-expanded="false" aria-controls="collapseExample">
							More info
						</button>
					</p>
					<div class="collapse" id="@item.Name.Replace( " ", "")">
						<div class="card card-body">
							@item.Details
						</div>
					</div>
				</td>
			</tr>
		</tbody>

	}

</table>
<div> 
	 <h1>@Model.MyCounter</h1>
 <a asp-page="/Past" asp-route-add="1" class="btn btn-success">Lägg till</a> 

<p>@Model.TestButton</p>
</div>
