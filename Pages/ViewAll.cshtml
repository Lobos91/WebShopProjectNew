@page
@model WebbshoppenSS.Pages.ViewAllModel
@{
}


<h1>Full Assortment</h1>
<br />

<form>
    <p>
        <input type="text" asp-for="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>

<h5>All Products:</h5>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Type</th>
            <th scope="col">Stock</th>
            <th scoope="col">Category</th>
            
        </tr>

    </thead>
    @foreach (var item in Model.Result)
    {
        <tbody>
            <tr>

                <th scope="row">@item.ProductID <img src="~/img/@item.ImgUrl" width="40" height="40" />  </th>
                <td>@item.Name</td>
                <td>EUR: @item.Price / SEK: @(item.PriceSek = item.Price * 9.5 )</td>
                <td>@item.ProductType</td>
                <td>@item.Quanity</td>
                @foreach (var category in item.ProductCategory)
                {
                    <td class="card-title">Type: @category</td>
                }
            </tr>
        </tbody>
    }


</table>